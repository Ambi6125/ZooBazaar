@page
@model ZooBazaarWebsite.Pages.Profile.EditModel
@{
}
<div class="container-xl px-4 mt-4">

    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" type="button">Upload new image</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputUsername">Username</label>
                            <input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="@Model.employee.username" disabled>
                        </div>
                         <form method="POST">
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                           
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Full name</label>
                                <input class="form-control"type="text" placeholder="Enter your full name" value="@Model.employee.FullName" disabled>
                                <input hidden asp-for="updateEmployee.FullName" value="@Model.employee.FullName" />  

                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" >Address</label>
                                <input class="form-control" asp-for="updateEmployee.Address" type="text" placeholder="Enter your address" value="@Model.employee.Address">
                            </div>
                            
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" >Email address</label>
                            <input class="form-control" asp-for="updateEmployee.Email" type="email" placeholder="Enter your email address" value="@Model.employee.Email">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" >Phone number</label>
                                <input class="form-control" asp-for="updateEmployee.Phone" type="tel" placeholder="Enter your phone number" value="@Model.employee.Phone">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" >Birthday</label>
                                <input class="form-control" type="text" placeholder="Enter your birthday" value="@Model.employee.BirthDate" disabled>
                               <input hidden asp-for="updateEmployee.BirthDate" value="@Model.employee.BirthDate" />  
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="submit">Save</button>
                        </form>

                </div>
            </div>
        </div>
    </div>
</div>
